<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="161dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Dizer ola"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_sobrenome" />

    <TextView
        android:id="@+id/text_resultadp"
        android:layout_width="207dp"
        android:layout_height="56dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="98dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Resultado"
        app:layout_constraintBottom_toTopOf="@+id/edit_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_sobrenome"
        android:layout_width="251dp"
        android:layout_height="74dp"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:gravity="center|center_horizontal|center_vertical"
        android:hint="insira sobrenome"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/button_ola"
        app:layout_constraintStart_toStartOf="@+id/edit_nome"
        app:layout_constraintTop_toBottomOf="@+id/edit_nome" />

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="249dp"
        android:layout_height="70dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:gravity="center|center_horizontal|center_vertical"
        android:hint="insira nome"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edit_sobrenome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_resultadp" />

</androidx.constraintlayout.widget.ConstraintLayout>